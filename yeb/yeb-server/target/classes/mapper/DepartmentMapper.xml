<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxxx.server.mapper.DepartmentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xxxx.server.pojo.Department">
        <!-- 字段映射：column 表字段，property 实体类属性名-->
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="parentId" property="parentId" />
        <result column="depPath" property="depPath" />
        <result column="enabled" property="enabled" />
        <result column="isParent" property="isParent" />
    </resultMap>

    <!-- 相当于 递归查询 -->
    <resultMap id="DepartmentWithChildren"
               type="com.xxxx.server.pojo.Department"
               extends="BaseResultMap">
        <collection
                property="children"
                ofType="com.xxxx.server.pojo.Department"
                select="com.xxxx.server.mapper.DepartmentMapper.getAllDepartments"
                column="id">
<!--                SELECT * FROM t_department WHERE parent_id=-1-->
<!--                 SELECT * FROM t_department WHERE parent_id=1-->
<!--                 SELECT * FROM t_department WHERE parent_id=2 .... select ... 再次调用此方法，相当于 递归查询 -->
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, parentId, depPath, enabled, isParent
    </sql>

    <!-- 添加部门 : 调用存储过程 CALLABLE -->
    <select id="addDep" statementType="CALLABLE">
        call addDept(
            #{name,mode=IN,jdbcType=VARCHAR},
            #{parentId,mode=IN,jdbcType=INTEGER},
            #{enabled,mode=IN,jdbcType=BOOLEAN},
            #{result,mode=OUT,jdbcType=INTEGER},
            #{id,mode=OUT,jdbcType=INTEGER}
            )

    </select>

    <!-- 删除部门 : 调用存储过程 CALLABLE -->
    <delete id="deleteDep" statementType="CALLABLE">
        call deleteDept(
            #{id,mode=IN,jdbcType=INTEGER},
            #{result,mode=OUT,jdbcType=INTEGER}
            )
    </delete>

    <!-- 获取所有部门 -->
    <select id="getAllDepartments" resultMap="DepartmentWithChildren">
        select
        <include refid="Base_Column_List"/>
        from t_department
        where parentId=#{parentId}
    </select>

</mapper>
